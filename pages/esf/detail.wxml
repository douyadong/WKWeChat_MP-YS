<!--detail.wxml  二手房详情页-->
<!--swiper-->
<view id="swiper">
<swiper circular="{{true}}" indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="getSwiperCurrentPage">
  	 <swiper-item>
       <video poster="{{postImageUrl}}" id="myVideo" src="{{videoUrl}}" controls></video>
    </swiper-item>
  	<block wx:for="{{imgUrls}}">
    <swiper-item bindtap="preview"> 
      <image src="{{item}}" class="slide-image"/>
    </swiper-item>
  </block>
</swiper>
<view id="numBox">
	<text>{{swiperCurrent}}</text>/<text>{{swiperTotal}}</text>
</view>
</view>

