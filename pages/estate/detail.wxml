<view style="background-color:white">
  <swiper interval="2000" style="width:100%;height:56.3vw">  
      <swiper-item style="position:relative" wx:for="{{imgUrls}}">      
        <video wx:if="{{item.type=='video'}}" src="{{item.url}}" style="width:100%;height:56.3vw" controls>
        
        </video>
        <image bindtap="preview" data-img-url="{{item.url}}" wx:if="{{item.type=='img'}}" src="{{item.url}}" style="width:100%" mode="widthFix">

        </image>
        <view style="position:absolute;right:40rpx;bottom:30rpx;border-radius:30rpx;background-color:black;color:white;padding:6rpx;padding-left:30rpx;padding-right:30rpx;font-size:24rpx;opacity:0.6">
          {{index + 1}}/{{imgUrls.length}}
        </view>
      </swiper-item>
    
  </swiper>
  <view style="padding:30rpx;">
    <view style="width:100rpx;heigth:100rpx;float:left">
      <image src="http://img.wkzf.com/5cbf79533866496bbec1cb60b28dce75.DL" style="width:100%;height:100rpx;border-radius:50%;float:left;"/>
    </view>
    <view style="float:left;padding-top:20rpx;padding-left:20rpx;background-color:white">
      <text style="font-size:36rpx">王小五</text>
      <text style="margin-left:20rpx;font-size:36rpx;color:gray">小区专家</text>    
    </view>
    <view style="float:right;padding-top:20rpx">
      <icon type="success" bindtap="call"></icon>
    </view>
    <view style="clear:both"></view>
  </view>
</view>
