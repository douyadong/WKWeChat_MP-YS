<import src="../../components/house-comment.wxml"/>
<view class="panel comments">
 <view class="panel-hd">
    <view class="head">用户评论</view>
    <navigator class="assistant" url="/pages/comment/list?subEstateId={{subEstateId}}">
      <text>{{commentsCount}}</text>
      <text class="iconfont icon-arrow-r"></text>
    </navigator>
  </view> 
  <view class="panel-bd">
    <view class="house-comments">
        <template is="house-comment" data="{{comments}}" />
        <view class="btn-group">
          <navigator bindtap="gotoComment" data-url="/pages/comment/write?subEstateId={{subEstateId}}">
            我来点评
          </navigator>
        </view>
    </view>
  </view>
</view>
<view class="gap"></view>