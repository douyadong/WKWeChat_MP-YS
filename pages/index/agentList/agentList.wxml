<block wx:for="{{agentList}}" wx:for-item="list" wx:for-index="index" wx:key="index"> 
    <navigator url="/pages/agent/detail?agentId={{list.agentId}}" class="agentList">
        <view class="portrait">
            <image mode="aspectFill" src="{{list.agentHeadImgUrl}}"/>
            <block wx:if="{{list.isWellAgent == 1}}">
                <view class="tag"></view>
            </block>
        </view>
        <view class="content">
            <view class="left">
                <view class="title">{{list.agentId}}{{list.agentName}}</view>
                <view class="company">{{list.agentBelongToCompanyName}}</view>
                <block wx:if="{{list.agentBizTownList != null && list.agentBizTownList.length != 0}}">
                    <view class="businessCenter">熟悉商圈:<text wx:for="{{list.agentBizTownList}}" wx:for-item="list" wx:for-index="index" wx:key="index">{{list}},</text></view>
                </block>
                <block wx:if="{{list.agentBizTownList == null || list.agentBizTownList.length == 0}}">
                    <view class="bubbles" wx:if="{{list.wellAgentBizMessageList != null && list.wellAgentBizMessageList.length != 0}}" >
                        <text class="bubbleList" wx:for="{{ list.wellAgentBizMessageList }}" wx:for-item="list" wx:for-index="index" wx:key="index">{{list}}</text>
                    </view>
                </block>
            </view>
            <view class="right">
                <view class="starNumber">
                    <text class="iconfont icon-star-all star"></text>
                    <text class="number">{{list.agentCommentScore}}</text>
                </view>
                <view class="evaluateNumber">
                    <text class="number">{{list.userEvaluateNum}}</text>人评价
                </view>    
            </view>
        </view>
    </navigator>
</block>
