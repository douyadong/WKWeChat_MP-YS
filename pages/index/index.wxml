<import src="../components/develop.wxml" />

<!--index.wxml-->
<view class="page {{isScroll ? 'noScroll':''}}">
  <view class="searchNavBox">
    <view class="searchNav">
      <view class="city" data-pagename="../city/index" bindtap="goPage"><text class="cityName">上海</text><text class="iconfont icon-arrow-down down"></text></view>
      <view class="searchBox">
        <view class="search" data-pagename="../screen/index" bindtap="goPage"><text class="iconfont icon-search searchIcon"></text><text class="searchText">搜索小区或地址</text></view>
      </view>
    </view>
  </view>
  <view class="buySell">
      <view class="list">
        <view class="circular buyCircular"></view>
        <view class="text">我要卖房</view>
      </view>
      <view class="list">
        <view class="circular sellCircular"></view>
        <view class="text">我要买房</view>
      </view>
  </view>
  <!-- 筛选 -->
  <include src="screen/template.wxml"/>
  <!-- 经纪人列表 -->
  <view class="agentListBox">
      <block wx:for="{{agentList}}" wx:for-item="list" wx:for-index="index" wx:key="index"> 
          <include src="agentList/list.wxml"/>
      </block>
  </view>
  <!-- 高亮 -->
