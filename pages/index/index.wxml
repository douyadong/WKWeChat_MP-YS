<import src="../components/develop.wxml" />

<!--index.wxml-->
<view class="page {{isScroll ? 'noScroll':''}}">
  <view class="searchNavBox">
    <view class="searchNav">
      <navigator open-type="redirect" url="/pages/city/index" class="city">
          <text class="cityName">{{geography.cityName}}</text>
          <text class="down"></text>
      </navigator>
      <view class="searchBox">
        <navigator url="/pages/screen/index" class="search">
        	  <text class="iconfont icon-search searchIcon"></text><text class="searchText">搜索小区或地址</text>
        </navigator>
      </view>
    </view>
  </view>
  <view class="buySell">
      <view class="list">
        <view class="circular buyCircular"></view>
        <navigator url="/pages/sell/index" class="text">我要卖房</navigator>
      </view>
      <view class="list">
        <view class="circular sellCircular"></view>
        <navigator url="/pages/buy/index" class="text">我要买房</navigator>
      </view>
  </view>
  <!-- 筛选-->
  <include src="filterAgentList/filterAgentList.wxml"/>
  <!-- 没有经纪人列表列表显示 -->
  <view class="noAgentImgBox" wx:if="{{agentList.length == 0}}"></view>
  <!-- 经纪人列表 -->
  <view class="agentListBox">
      <include src="agentList/agentList.wxml"/>
  </view>
  
</view>