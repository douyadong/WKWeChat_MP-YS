<view class="page">
    <view class="logonBox">
        <view class="title">验证手机号码</view>
        <view class="formBox">
            <view class="inputBox">
                <text class="getCode" bindtap="getCode">获取验证码</text>
                <input type="number" placeholder="请输入手机号码" placeholder-class="formPlaceholder" class="input" bindinput="getPhone"/>
            </view>
            <view class="inputBox">
                <input type="number" placeholder="请输入手机验证码" placeholder-class="formPlaceholder" class="input" bindinput="getVerificationCode"/>
            </view>
            <view class="button" bindtap="submit">确定</view>
            <view class="verificationTitle">收不到短信？点此使用<text class="verification" bindtap="verification">语音验证</text></view>
        </view>
    </view>
</view>
