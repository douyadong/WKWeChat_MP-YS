.source{
  padding:30rpx;
}
.source .thumbnail{
  float:left;
  height:170rpx;
  width:260rpx;
}
.source .param{
  color:#7c7c7c;
  font-size:22rpx;
  line-height:36rpx;
  margin-left:282rpx;
}
.source .title{
  color:#4e4e4e;
  font-size:32rpx;
  line-height:44rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;    
}
.source .money{
  color:#f95355;
  font-size:32rpx;
}
.source .money,.source .price{
  float:right;
}
.source .highlights text{
  background-color:#f5f5f5;
  border-radius:6rpx;
  display:inline-block;
  font-size:20rpx;
  margin-right:10rpx;
  padding:4rpx 14rpx;
}
.source .highlights .selected{
  background-color:#4081d6;
  color:#fff;
}
.sources .separator{
  margin-left:30rpx;
}